<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config> 
	
	<servlet>
		<servlet-name>Test</servlet-name>
		<servlet-class>com.servlets.Test</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreationClient</servlet-name>
		<servlet-class>com.servlets.CreationClient</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ConnexionClient</servlet-name>
		<servlet-class>com.servlets.ConnexionClient</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Test</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreationClient</servlet-name>
		<url-pattern>/creationClient</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConnexionClient</servlet-name>
		<url-pattern>/connexionClient</url-pattern>
	</servlet-mapping>
</web-app>